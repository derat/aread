{
  "manifest_version": 3,
  "name": "aread",
  "version": "14",
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "aread",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "save-page": {
      "description": "Save page",
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      }
    },
    "send-to-kindle": {
      "description": "Send to Kindle",
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      }
    }
  }
}
