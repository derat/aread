{
  "manifest_version": 2,
  "name": "aread",
  "version": "11",
  "permissions": ["activeTab", "contextMenus", "storage"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "aread",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["common.js", "background.js"]
  },
  "commands": {
    "send-to-kindle": {
      "description": "Send to Kindle",
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      }
    }
  }
}
