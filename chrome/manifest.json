{
  "manifest_version": 2,
  "name": "aread",
  "version": "10",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "aread",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["common.js", "background.js"]
  },
  "commands": {
    "send-to-kindle": {
      "description": "Send to Kindle",
      "suggested_key" : {
        "default": "Ctrl+Shift+K"
      }
    }
  }
}
